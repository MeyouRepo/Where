<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/homeSeeRe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackShow"
        android:visibility="gone">

    </RelativeLayout>

    <ScrollView
        android:id="@+id/homeTopRightScrollShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/home_scrollview_top_right_bac"
        android:scrollbarSize="4.5dp"
        android:scrollbarThumbVertical="@null"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tool_1"
                style="@style/homeScrollviewTopRightToolBar">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/i1"
                    style="@style/homeScrollviewTopRightCheckIcon" />


                <TextView
                    android:id="@+id/t1"
                    style="@style/homeScrollviewTopRightTextView" />

            </androidx.appcompat.widget.Toolbar>


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tool_2"
                style="@style/homeScrollviewTopRightToolBar">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/i2"
                    style="@style/homeScrollviewTopRightCheckIcon" />

                <TextView
                    android:id="@+id/t2"
                    style="@style/homeScrollviewTopRightTextView" />

            </androidx.appcompat.widget.Toolbar>


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tool_3"
                style="@style/homeScrollviewTopRightToolBar">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/i3"
                    style="@style/homeScrollviewTopRightCheckIcon" />

                <TextView
                    android:id="@+id/t3"
                    style="@style/homeScrollviewTopRightTextView" />

            </androidx.appcompat.widget.Toolbar>


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tool_4"
                style="@style/homeScrollviewTopRightToolBar">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/i4"
                    style="@style/homeScrollviewTopRightCheckIcon" />

                <TextView
                    android:id="@+id/t4"
                    style="@style/homeScrollviewTopRightTextView" />

            </androidx.appcompat.widget.Toolbar>


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tool_5"
                style="@style/homeScrollviewTopRightToolBar">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/i5"
                    style="@style/homeScrollviewTopRightCheckIcon" />

                <TextView
                    android:id="@+id/t5"
                    style="@style/homeScrollviewTopRightTextView" />
            </androidx.appcompat.widget.Toolbar>


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tool_6"
                style="@style/homeScrollviewTopRightToolBar">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/i6"
                    style="@style/homeScrollviewTopRightCheckIcon" />

                <TextView
                    android:id="@+id/t6"
                    style="@style/homeScrollviewTopRightTextView" />
            </androidx.appcompat.widget.Toolbar>


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tool_7"
                style="@style/homeScrollviewTopRightToolBar">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/i7"
                    style="@style/homeScrollviewTopRightCheckIcon" />

                <TextView
                    android:id="@+id/t7"
                    style="@style/homeScrollviewTopRightTextView" />

            </androidx.appcompat.widget.Toolbar>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>