<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/nextScrollViewWithCode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:scrollbarSize="@dimen/next_back_to_home_button_edge"
        android:scrollbarThumbVertical="@drawable/next_scrollview_bar_drawable"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/loadCodeTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/nextTopToolBarHeight"
                android:layout_marginBottom="8dp"
                android:gravity="start"
                android:lineSpacingExtra="16dp"
                android:paddingStart="48dp"
                android:paddingTop="14dp"
                android:paddingEnd="48dp"
                android:textColor="@color/homeListToolBarText"
                android:textSize="19dp"
                android:visibility="gone"
                tools:ignore="SpUsage" />
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nextTopToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/next_top_toolbar_background_drawable"
        android:paddingTop="@dimen/next_back_to_home_button_edge"
        android:paddingEnd="@dimen/next_back_to_home_button_edge"
        android:paddingBottom="@dimen/next_back_to_home_button_edge">

        <LinearLayout
            android:id="@+id/toolbar5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/back"
                android:layout_width="@dimen/next_back_to_home_button_size"
                android:layout_height="@dimen/next_back_to_home_button_size"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/next_back_to_home_button_edge"
                android:background="@drawable/next_back_to_home_drawable"
                android:elevation="1dp" />

            <View
                android:id="@+id/nextProperty"
                android:layout_width="@dimen/next_back_to_home_button_size"
                android:layout_height="@dimen/next_back_to_home_button_size"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/next_back_to_home_button_edge"
                android:background="@drawable/next_property_button_drawable"
                android:elevation="1dp" />

            <View
                android:id="@+id/nextShow"
                android:layout_width="@dimen/next_back_to_home_button_size"
                android:layout_height="@dimen/next_back_to_home_button_size"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/next_back_to_home_button_edge"
                android:background="@drawable/next_showing_button_drawable"
                android:elevation="1dp" />

            <TextView
                android:id="@+id/nextTopTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@android:color/transparent"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/nextColorAccent"
                android:textSize="25dp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:id="@+id/nextTopRightButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/next_back_to_home_button_size"
            android:background="@color/nextColorAccent"
            android:gravity="center"
            android:onClick="topRightClick"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="MainActivity.java"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/nextSeeRe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/nextScrollviewTopRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/next_back_to_home_button_edge"
        android:layout_marginEnd="@dimen/next_back_to_home_button_edge"
        android:background="@color/nextColorAccent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nextScrollViewButton_1"
                style="@style/nextScrollViewTopRightButton" />

            <TextView
                android:id="@+id/nextScrollViewButton_2"
                style="@style/nextScrollViewTopRightButton" />

            <TextView
                android:id="@+id/nextScrollViewButton_3"
                style="@style/nextScrollViewTopRightButton" />

            <TextView
                android:id="@+id/nextScrollViewButton_4"
                style="@style/nextScrollViewTopRightButton" />


            <TextView
                android:id="@+id/nextScrollViewButton_5"
                style="@style/nextScrollViewTopRightButton" />

            <TextView
                android:id="@+id/nextScrollViewButton_6"
                style="@style/nextScrollViewTopRightButton" />

            <TextView
                android:id="@+id/nextScrollViewButton_7"
                style="@style/nextScrollViewTopRightButton" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
