<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/showing_include" />

    <ImageView
        android:id="@+id/ImageView_On_TogetherAnimationExample"
        android:layout_centerInParent="true"
        android:src="@drawable/zzz_63"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <Button
        android:id="@+id/Button_On_TogetherAnimationExample"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="19dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:onClick="showingClick"
        style="?attr/borderlessButtonStyle"
        android:textAllCaps="false"
        android:text="Together"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>