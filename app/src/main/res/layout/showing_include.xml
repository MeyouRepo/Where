<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/codeTopToolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@android:color/transparent"
    android:paddingTop="@dimen/next_back_to_home_button_edge"
    android:paddingBottom="@dimen/next_back_to_home_button_edge">


    <LinearLayout
        android:id="@+id/codeTopLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/codeBack"
            android:layout_width="@dimen/next_back_to_home_button_size"
            android:layout_height="@dimen/next_back_to_home_button_size"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/next_back_to_home_button_edge"
            android:background="@drawable/next_back_to_home_drawable"
            android:elevation="1dp"
            android:onClick="showingRgbClick"
            tools:ignore="UsingOnClickInXml" />

        <View
            android:id="@+id/codeToProperty"
            android:layout_width="@dimen/next_back_to_home_button_size"
            android:layout_height="@dimen/next_back_to_home_button_size"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/next_back_to_home_button_edge"
            android:background="@drawable/next_property_button_drawable"
            android:elevation="1dp"
            android:onClick="showingRgbClick"
            tools:ignore="UsingOnClickInXml" />

        <View
            android:id="@+id/codeToHome"
            android:layout_width="@dimen/next_back_to_home_button_size"
            android:layout_height="@dimen/next_back_to_home_button_size"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/next_back_to_home_button_edge"
            android:background="@drawable/next_showing_button_drawable"
            android:elevation="1dp"
            android:onClick="showingRgbClick"
            tools:ignore="UsingOnClickInXml" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>